%h2 Details about #{@movie.title}

%ul#details
  %li
    Director:
    = @movie.director
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description

%ul
  %li= link_to 'Edit', edit_movie_path(@movie)
  %li= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
  %li= link_to 'Back to movie list', movies_path
  %li= link_to 'Find Movies With Same Director', from_same_director_movie_path(@movie)
